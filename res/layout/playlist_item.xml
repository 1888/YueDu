<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

        <ImageView
                android:id="@+id/tune_item_thumb_iv"
                android:layout_height="59dp"
                android:layout_width="90dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/tune_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/tune_item_thumb_iv"
                android:layout_toRightOf="@id/tune_item_thumb_iv"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/tune_item_time_tv"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_alignBottom="@id/tune_item_thumb_iv"
                android:layout_alignParentRight="true"
                android:textColor="#e9e7e8"
                android:textSize="12sp"
                android:gravity="left"/>

        <TextView
                android:id="@+id/tune_item_info_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@id/tune_item_time_tv"
                android:layout_toRightOf="@id/tune_item_thumb_iv"
                android:layout_toLeftOf="@id/tune_item_time_tv"
                android:textColor="#e9e7e8"
                android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>